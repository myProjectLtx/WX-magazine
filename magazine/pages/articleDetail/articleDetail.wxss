.container{
    margin-top: 20rpx;
    padding: 10rpx;
}
.title-container text{
    font-size: 48rpx;
}
.authorAndDate text{
    font-size: 28rpx;
    color: #666;
    margin-right: 20rx;
}
.authorAndDate{
    margin-top: 20rpx;
}
.authorAndDate text:first-of-type{
    color: #576b95;
}
.content-container{
    margin-top: 30rpx;
    text-indent: 2em;
}
.content-container text{
    font-size: 16rpx;
    line-height: 32rpx;
}
.read-container{
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.read-container text{
    font-size: 14rpx;
    margin-right: 20rpx;
}
.banner{
    width: 750rpx;
    height: 500rpx;
}
.banner image{
    width: 100%;
    height: 100%;
}
.media-container{
    display: flex;
    justify-content: center;
}
.video{
    widows: 700rpx;
    height: 500rpx;
}
.controls{
    position: relative;
    width: 700rpx;
    height: 500rpx;
    margin-left: -80rpx;
    background-color: red;
}
.controls-box{
    position: absolute;
    top: 50%;
    left: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -50rpx;
    margin-left: -50rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: 50%;
}
.controls-box cover-image{
    width: 30rpx;
    height: 30rpx;
    margin-top: 20rpx;
}
.controls-box cover-view{
    font-size: 24rpx;
    color: #FFF;
}



.audio-container{
    display: flex;
    align-items: center;
    padding: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 30rpx;
    background-color: #fdfdfd;
    border-radius: 4rpx;
}
.audio-controler{
    margin-right: 40rpx;
}
.audio-controler image{
    width: 80rpx;
    height: 80rpx;
}
.audio-title text{
    font-size: 36rpx;
}
.audio-from text{
    font-size: 28rpx;
    color: #666;
}
.audio-progress{
    position: relative;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    /* width: 520rpx; */
}
.progress-circle{
    position: absolute;
    top: 50%;
    margin-top: -10rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: aqua;
}
.audio-time{
    display: flex;
    justify-content: space-between;
}
.audio-time text{
    color: #666;
    font-size: 24rpx;
}





