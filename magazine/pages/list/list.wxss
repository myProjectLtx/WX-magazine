/* pages/list/list.wxss*/

.recommend-container{
    padding: 0 25rpx;
}
.recommend-article{
    display: flex;
     flex-direction: column; 
    align-items: center;
}
.date{
    font-size: 52rpx;
    letter-spacing: 10rpx; 
    position: relative;
    padding-bottom: 24rpx;
}
.date::after{
    position: absolute;
    left: 62rpx;
    bottom: 0;
    display: block;
    content: ' ';
    width: 114rpx;
    height: 4rpx;
    background-color: #999;
}
.recommend-title{
    font-size: 28rpx;
    text-align: center;
    line-height: 56rpx;
}
.recommend-cover{
    width: 700rpx;
    margin-top: 30rpx;
}
.recommend-box text{
    display: inline-block;
    border: 1px solid #000;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    margin: 20rpx 20rpx 20rpx 0;
}
.recommend-box text:first-of-type{
    background-color: #000;
    color: #fff;
    font-weight: bold;
}


